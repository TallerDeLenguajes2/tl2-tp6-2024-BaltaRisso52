@model Producto


<section class="container mt-5">
    <h2 class="text-center mb-4">Producto</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Descripción</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Descripcion</td>
                <td>@Model.Precio</td>
            </tr>
        </tbody>
    </table>

    <section class="text-center mt-4">
        <h3 class="text-warning">¿Desea eliminar este producto?</h3>
        <a asp-controller="Productos" asp-action="EliminarProductoPorId" asp-route-id="@Model.IdProducto" class="btn btn-success mx-2">Eliminar</a>
        <a asp-controller="Productos" asp-action="Index" class="btn btn-danger mx-2">Cancelar</a>
    </section>
</section>