@model Producto

<h2>Editar Producto</h2>

<section class="container mt-5">
    <form asp-controller="Productos" asp-action="ModificarProducto" method="post" class="needs-validation" novalidate>
        <section class="row mb-3">
            <section class="col-md-6">
                <label asp-for="Descripcion" class="form-label"></label>
                <input asp-for="Descripcion" class="form-control">
            </section>
        </section>
        <section class="row mb-3">
            <section class="col-md-6">
                <label asp-for="Precio" class="form-label"></label>
                <input asp-for="Precio" class="form-control">
                <span asp-validation-for="Precio" class="text-danger"></span>
            </section>
        </section>
        <input type="hidden" asp-for="IdProducto" />
        <section class="row">
            <section class="col-md-6">
                <input type="submit" value="Guardar" class="btn btn-primary w-100">
            </section>
        </section>
    </form>
</section>