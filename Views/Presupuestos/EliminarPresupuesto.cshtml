@model Presupuesto


<section class="container mt-5">
    <h2 class="text-center mb-4">Presupuesto</h2>

    <section class="mb-5">
        <section class="d-flex align-items-center">
            <h3 class="mb-0 me-3">Nombre Destinatario: @Model.NombreDestinatario</h3>
        </section>
        <p>Productos:</p>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var presupuestoDetalle in Model.Detalles)
                {
                    <tr>
                        <td>@presupuestoDetalle.Producto.Descripcion</td>
                        <td>@String.Format("{0:C}", presupuestoDetalle.Producto.Precio)</td>
                        <td>@presupuestoDetalle.Cantidad</td>
                        <td>@String.Format("{0:C}", presupuestoDetalle.Total())</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
    <section class="text-center mt-4">
        <h3 class="text-warning">¿Desea eliminar este presupuesto?</h3>
        <a asp-controller="Presupuestos" asp-action="EliminarPresupuestoPorId" asp-route-id="@Model.IdPresupuesto1" class="btn btn-success mx-2">Eliminar</a>
        <a asp-controller="Presupuestos" asp-action="Index" class="btn btn-danger mx-2">Cancelar</a>
    </section>
</section>